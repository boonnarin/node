<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/stys.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <style>
        .fs-6 {
            font-size: 2rem !important;
        }
    </style>
</head>

<body>
    <%- include('header') %>
    <main>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4"  >Sign in to your account</h2>
                        <form action="/signup" method="post" id="registrationForm" class="row gy-2">
                            <!-- Gender -->
                            <div class="col-12">
                                <label for="gender" class="form-label">Gender (เพศ)</label>
                                <select class="form-select" name="gender" id="gender" required>
                                    <option value="" selected disabled>Select gender</option>
                                    <option value="male">Male (ชาย)</option>
                                    <option value="female">Female (หญิง)</option>
                                </select>
                            </div>

                            <!-- Prefix -->
                            <div class="col-12">
                                <label for="prefix" class="form-label">Prefix (คำนำหน้า)</label>
                                <select class="form-select" name="prefix" id="prefix" required>
                                    <option value="" selected disabled>Select prefix</option>
                                    <option value="mr">Mr. (นาย)</option>
                                    <option value="mrs">Mrs. (นาง)</option>
                                    <option value="miss">Miss (นางสาว)</option>
                                </select>
                            </div>

                            <!-- First Name -->
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">First Name (ชื่อ)</label>
                                <input type="text" class="form-control" name="firstName" id="firstName" required>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">Last Name (นามสกุล)</label>
                                <input type="text" class="form-control" name="lastName" id="lastName" required>
                            </div>

                            <!-- Date of Birth -->
                            <div class="col-12">
                                <label for="dob" class="form-label">Date of Birth (วัน/เดือน/ปีเกิด)</label>
                                <input type="date" class="form-control" name="dob" id="dob" required>
                            </div>

                            <!-- Citizen ID -->
                            <div class="col-12">
                                <label for="citizenID" class="form-label">Citizen ID (เลขบัตรประชาชน 13 หลัก)</label>
                                <input type="text" class="form-control" name="citizenID" id="citizenID" minlength="13" maxlength="13" pattern="[0-9]{13}" required>
                                <div class="invalid-feedback">Please enter a valid 13-digit Citizen ID.</div>
                            </div>

                            <!-- Marital Status -->
                            <div class="col-12">
                                <label for="maritalStatus" class="form-label">Marital Status (สถานภาพการสมรส)</label>
                                <select class="form-select" name="maritalStatus" id="maritalStatus" required>
                                    <option value="" selected disabled>Select marital status</option>
                                    <option value="married">Married</option>
                                    <option value="engaged">Engaged</option>
                                    <option value="divorced">Divorced</option>
                                    <option value="separated">Separated</option>
                                    <option value="single">Single</option>
                                </select>
                            </div>

                            <!-- Current Occupation -->
                            <div class="col-12">
                                <label for="occupation" class="form-label">Current Occupation (อาชีพปัจจุบัน)</label>
                                <select class="form-select" name="occupation" id="occupation" required>
                                    <option value="" selected disabled>Select occupation</option>
                                    <option value="homemaker">Homemaker</option>
                                    <option value="agriculture">Agriculture</option>
                                    <option value="trader">Trader / General Contractor</option>
                                    <option value="service">Service</option>
                                    <option value="mechanic">Mechanic / Construction</option>
                                    <option value="government">Government / Civil Servant</option>
                                    <option value="professional">Professional</option>
                                    <option value="office">Office Worker</option>
                                    <option value="religious">Religious / Monk</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <!-- Family Income -->
                            <div class="col-12">
                                <label for="familyIncome" class="form-label">Family Income (last 12 months) (รายได้ครอบครัว)</label>
                                <select class="form-select" name="familyIncome" id="familyIncome" required>
                                    <option value="" selected disabled>Select family income range</option>
                                    <option value="lessThan50k">Less than 50,000 THB</option>
                                    <option value="50kTo99k">50,000 - 99,999 THB</option>
                                    <option value="100kTo149k">100,000 - 149,999 THB</option>
                                    <option value="150kTo199k">150,000 - 199,999 THB</option>
                                    <option value="200kTo249k">200,000 - 249,999 THB</option>
                                    <option value="250kTo299k">250,000 - 299,999 THB</option>
                                    <option value="300kAndAbove">300,000 THB and above</option>
                                </select>
                            </div>

                            <!-- Highest Education Level -->
                            <div class="col-12">
                                <label for="educationLevel" class="form-label">Highest Education Level (ระดับการศึกษาสูงสุด)</label>
                                <select class="form-select" name="educationLevel" id="educationLevel" required>
                                    <option value="" selected disabled>Select education level</option>
                                    <option value="noSchool">Never attended school (ไม่เคยไปโรงเรียน)</option>
                                    <option value="outsideSchool">Outside of school (non-formal education) (การศึกษานอกโรงเรียน)</option>
                                    <option value="elementary">Elementary School (ประถมศึกษา)</option>
                                    <option value="lowerSecondary">Lower Secondary School (มัธยมต้น)</option>
                                    <option value="upperSecondary">Upper Secondary School (มัธยมปลาย)</option>
                                    <option value="vocationalCert">Vocational Certificate (Vocational Education) (ประกาศนียบัตรวิชาชีพ)</option>
                                    <option value="higherVocationalCert">Higher Vocational Certificate (ประกาศนียบัตรวิชาชีพสูงขึ้น)</option>
                                    <option value="bachelor">Bachelor's Degree (General 4-year program) (ปริญญาตรี)</option>
                                    <option value="professionalDegree">Professional Degree (6-year program or more) (ปริญญาเอกหรือมากกว่า)</option>
                                    <option value="masterOrHigher">Master's Degree or Higher (ปริญญาโทหรือสูงกว่า)</option>
                                </select>
                            </div>

                            <!-- Religion or Belief -->
                            <div class="col-12">
                                <label for="religion" class="form-label">Religion or Belief (ศาสนาหรือความเชื่อ)</label>
                                <select class="form-select" name="religion" id="religion" required>
                                    <option value="" selected disabled>Select religion or belief</option>
                                    <option value="buddhist">Buddhist (พุทธ)</option>
                                    <option value="christian">Christian (คริสต์)</option>
                                    <option value="islam">Islam (อิสลาม)</option>
                                    <option value="other">Other (specify) (อื่นๆ โปรดระบุ)</option>
                                </select>
                            </div>

                            <!-- Province -->
                            <div class="col-12">
                                <label for="province" class="form-label">Province (จังหวัด)</label>
                                <select class="form-select" name="province" id="province" required>
                                    <option value="" selected disabled>Please select your province (กรุณาเลือกจังหวัดของท่าน)</option>
                                </select>
                            </div>

                            <!-- District -->
                            <div class="col-12">
                                <label for="district" class="form-label">District (อำเภอ)</label>
                                <select class="form-select" name="district" id="district" required>
                                    <option value="" selected disabled>Please select your district (กรุณาเลือกอำเภอของท่าน)</option>
                                </select>
                            </div>

                            <!-- Subdistrict -->
                            <div class="col-12">
                                <label for="subdistrict" class="form-label">Subdistrict (ตำบล)</label>
                                <select class="form-select" name="subdistrict" id="subdistrict" required>
                                    <option value="" selected disabled>Please select your subdistrict (กรุณาเลือกตำบลของท่าน)</option>
                                </select>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <div class="d-grid my-3">
                                    <button class="btn btn-primary btn-lg" type="submit">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </main>
    <%- include('footer') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="js/locationScript.js"></script>
</body>

</html>
